{{> header}}
<div class="container mt-5" style="margin-left: 500px;">
<form method="post" action="/postreset">
   <div class="card text-center" style="width: 300px;">
      <div class="card-header h5 text-white bg-primary">Password Reset</div>
      <div class="card-body px-5">
         <p class="card-text py-2">
            Enter your email address and we'll send you an email with instructions to reset your password.
         </p>
         {{#if errMsg}}
         <div class="alert alert-danger"> {{errMsg}}</div>
         {{/if}}
         {{#if succMsg}}
         <div class="alert alert-success"> {{succMsg}}</div>
         {{/if}}
         <div class="form-outline">
            <input type="email" name="email" id="typeEmail" class="form-control my-3" placeholder="Enter Your Email" required/>
         </div>
         <input type="hidden" name="_csrf" value="{{csrf}}" />
         {{!-- <a href="/" class="btn btn-primary w-100" type="submit">Reset password</a> --}}
         <input type="submit" value="Submit" class="btn btn-primary w-100" />
      </div>
   </div>
</form>
</div>
{{> footer}}