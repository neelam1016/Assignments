body
    //Header 
    include ./header.pug
    //Form
    section.border.my-5.mx-5
      form#my-form.container.p-5(method="POST",action="/postdata")
        h1.mb-5.text-secondary Contact Us
        .form-row
          .form-group.col-md-6
            label(for='inputEmail4') First Name
            input#fname.form-control.border-sharp(type='text', placeholder='Jhon',name="fname" required)
          .form-group.col-md-6
            label(for='inputPassword4') Last Name
            input#lname.form-control.border-sharp(type='text', placeholder='Deo',name="lname" required)
        .form-group
          label(for='inputAddress') Email
          input#email.form-control.border-sharp(type='email', placeholder='johndeo13@example.com',name="email" required)
        .form-group
          label(for='inputAddress2') Phone Number
          input#mobile.form-control.border-sharp(type='text', placeholder='9876543210',name="phno" required)
        .form-group
          label(for='exampleFormControlTextarea1') Message
          textarea#message.form-control.border-sharp(rows='3',name="msg" required)
        #error.alert.alert-danger.text-center.border-sharp(style='display: none;', role='alert')
        #success.alert.alert-success.text-center(style='display: none;', role='alert')
        br
        button.btn.btn-success.border-sharp(type='submit') Submit
      //Footer
      include ./footer.pug
